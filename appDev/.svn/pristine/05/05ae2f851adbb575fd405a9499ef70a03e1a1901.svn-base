// 基本嵌套结构
@color:red;
@fontcolor:#333;
    //移动端上下左右一像素
.bordertop-1{
  position: relative;
}  
.bordertop-1:before{
    content:"";
    width:200%;
    height:1px;
    background:red;
    position:absolute;
    top:0;left:0;
    -webkit-transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform:scale(0.5);
    transform-origin:0 0;
}

.borderbot-1{
  position: relative;
}
.borderbot-1:after{
    content:"";
    width:200%;
    height:1px;
    background:blue;
    position:absolute;
    bottom:0;left:0;
    -webkit-transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform:scale(0.5);
    transform-origin:0 0;
}

.borderleft-1{
  position: relative;
}
.borderleft-1:before{
    content:"";
    width:1px;
    height:200%;
    background:purple;
    position:absolute;
    top:0;left:0;
    -webkit-transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform:scale(0.5);
    transform-origin:0 0;
}

.borderright-1{
  position: relative;
}
.borderright-1:after{
    content:"";
    width:1px;
    height:200%;
    background:purple;
    position:absolute;
    top:0;right:0;
    -webkit-transform:scale(0.5);
    -webkit-transform-origin:0 0;
    transform:scale(0.5);
    transform-origin:0 0;
}
